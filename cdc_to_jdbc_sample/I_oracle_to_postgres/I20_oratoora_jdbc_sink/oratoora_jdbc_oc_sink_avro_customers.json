{
  "name": "oratoora_jdbc_oc_sink_avro_customers",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "oratopos-HR-CUSTOMERS",

    "connection.url": "jdbc:oracle:thin:@//192.168.56.1:1521/ORA19C",
    "connection.user": "HR",
    "connection.password": "elql4$4$",

